        </div>
    </div>
</div>

<div class="form-horizontal control-group project-edit-miscellaneous">
    <div class="left-col">
        @Html.LabelFor(model => model.ProductGroup, new { @class = "strong" })
        <div class="controls">
            @Html.TextBoxFor(model => model.ProductGroup)
        </div>
    </div>
    <div class="right-col">
        @Html.LabelFor(model => model.Location, new { @class = "strong" })
        <div class="controls">
            @Html.TextBoxFor(model => model.Location, @displayMode)
        </div>
    </div>
</div>


