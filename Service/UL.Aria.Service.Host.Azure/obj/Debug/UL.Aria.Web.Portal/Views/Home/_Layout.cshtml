@using UL.Aria.Web.Common.Models.Shared
@using UL.Aria.Web.Common.Mvc
@using UL.Aria.Web.Common.Models.Search
@using UL.Enterprise.Foundation
@{
	Layout = "~/Views/Shared/_Layout.cshtml";    
}

@section styles {
	@RenderSection("styles", required: false)
}



<aside class="section-controls">
    @{Html.RenderPartial("_ProfileSummary");}
    <br class="clearfix clear-both" />
    @RenderSection("filters", false)
    <datalist id="criteria" data-json="@((ViewBag.JsonCriteria as JsonSearchCriteria).ToJson())"></datalist>
    <input type="hidden" id="defaultCriteria" data-json="@((ViewBag.JsonDefaultCriteria as JsonSearchCriteria).ToJson())" />
    @Html.AccordionMenu("main_menu", ViewBag.PageLinks as List<TaxonomyMenuItem>)
    @{Html.RenderPartial("_UlApps", ViewBag.UlApps as IEnumerable<MenuItem>);}
    @RenderSection("controls", false)
</aside>

<aside class="section-aside">
	@RenderSection("aside", false)
	@{
		Html.RenderPartial("_Faq");
		Html.RenderPartial("_Contact");
	}
</aside>

<div class="section-page">
	<div id="gritternotifications"></div>
	@RenderBody()
</div>

@section scripts {
	@RenderSection("scripts", required: false)
}