@using System.ComponentModel.DataAnnotations;
@using UL.Aria.Service.Contracts.Dto
@using UL.Aria.Web.Common.Models.Shared
@using UL.Enterprise.Foundation;
@using UL.Aria.Web.Common.Models.Project
@model UL.Aria.Web.Common.Models.Project.IProjectSummary

<div>
    @if (!@Model.EndDate.HasValue || @Model.EndDate > DateTime.Now)
    {
        <div class="profile-avitar-thumb">
            <img src="@Url.ProjectDetailIcon()" alt="In Progress" />
        </div>

        <h2>@Model.Name</h2>

        <em>In Progress</em>
    }

    else
    {
        <div class="profile-avitar-thumb">
            <img src="@Url.ProjectDetailIcon()" alt="Slipping">
        </div>

        <h2>@Model.Name</h2>

        <em>Slipping</em>
    }

</div>