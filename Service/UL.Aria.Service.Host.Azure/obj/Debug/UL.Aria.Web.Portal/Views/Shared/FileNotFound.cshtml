@model ErrorModel
@using UL.Aria.Web.Common.Models.Shared
@{
    if (!Request.IsAjaxRequest())
    {
        Layout = "~/Views/Error/_Layout.cshtml";
    }

    ViewBag.Title = "File Not Found :: UL";
    Response.StatusCode = (int)HttpStatusCode.NotFound;



    var message = "The requested page or file could not be found.";
    if (Model != null && Model.Exception != null)
    {
        message = Model.Exception.GetBaseException().Message.TrimEnd('.') + ".";
    }
}

<div class="error-header">
    <div class="text-right text-huge">404</div>
    <h1>We're sorry.</h1>
</div>
<div class="well well-clear text-larger">
    <p>@message  Please check the address and try again or <a href="@Url.PageContactUs()">contact us</a> if you continue to experience this issue.</p>
    <hr />
    <a href="@Url.PageHome()"><i class="icon-arrow-left"></i>Back to Home</a>
</div>
