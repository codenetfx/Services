@using UL.Aria.Web.Common.Mvc
@model UL.Aria.Web.Common.Models.Search.BusinessUnitSearchResult


<div class="search-result project-result clearfix">
	<div class="result-icon-container">
		<div class="result-icon">
			<a href="#">
				<img src="@Url.TransparentImage()" alt="@Model.Name" />
			</a>
		</div>
	</div>

	<div class="result-actions">
		@if (ViewBag.PopUpActions != null)
		{
			<input type="checkbox" class="pull-right" style="margin: 2px 0 0 10px;" value="@Model.Id" data-group-name="@Model.EntityType.ToString()" onclick=" return UL.Result_OnChange(this); " @(Model.IsSelected ? "checked='checked'" : null) />
		}
		<div class="dropdown pull-right">
			<a title="Open Menu" class="dropdown-toggle caret" data-toggle="dropdown" href="#"><i></i></a>
			<ul class="dropdown-menu" role="menu">
			    @*<li><a href="@Url.PageViewProjectTemplate(Model.Id)">View</a></li>*@
				<li><a data-toggle="modal" href="@Url.PageEditBusinessUnit(Model.Id)">Edit Business Unit</a></li>
			    @if (!Model.IsDeletePrevented)
			    {
			        <li>
			            <a href="#" data-toggle="modal" data-target="#DeleteModal" data-item-href="@Url.PageDeleteBusinessUnit(Model.Id)" data-modal-title="Delete Business Unit" data-item-name="Are you sure you want to delete '<span>@Html.DisplayFor(model => Model.Name)</span>'?">Delete</a>
			        </li>
			    }
			</ul>
		</div>
	</div>
	<div class="result-detail">
		<div class="result-item-title">
            <a data-toggle="modal" href="@Url.PageEditBusinessUnit(Model.Id)">@Model.Name</a>
		</div>
		<div class="display-row">
			<div class="display-label">@Html.DisplayNameFor(model => model.CreatedBy):</div>
			<div class="display-field">@Html.DisplayFor(model => model.CreatedBy)</div>
		</div>
		<div class="display-row">
			<div class="display-label">@Html.DisplayNameFor(model => model.LastModifiedBy):</div>
			<div class="display-field">@Html.DisplayFor(model => model.LastModifiedBy)</div>
		</div>
		<div class="display-row">
			<div class="display-label">@Html.DisplayNameFor(model => model.ChangeDate):</div>
			<div class="display-field">@Html.DisplayFor(model => model.ChangeDate)</div>
		</div>
		<div class="display-row">
			<div class="display-label">@Html.DisplayNameFor(model => model.Note):</div>
			<div class="display-field">@Html.DisplayFor(model => model.Note)</div>
		</div>
	</div>
</div>