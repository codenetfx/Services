@using System.Activities.Statements
@using UL.Aria.Web.Common.Mvc
@model UL.Aria.Web.Common.Models.Search.LinkSearchResult

<div class="search-result project-result clearfix">
	<div class="result-icon-container">
		<div class="result-icon">
			<a href="#">
				<img src="@Url.TransparentImage()" alt="@Model.Name" />
			</a>
		</div>
	</div>
	@if (!Model.IsDeleted)
	{
		<div class="result-actions">
			<div class="dropdown pull-right">
				<a title="Open Menu" class="dropdown-toggle caret" data-toggle="dropdown" href="#"><i></i></a>

				<ul class="dropdown-menu" role="menu">


					<li><a data-toggle="modal" href="@Url.PageEditLink(Model.Id)">Edit Link</a></li>
					<li>
						<a href="#" data-toggle="modal" data-target="#DeleteModal" data-item-href="@Url.PageDeactivateLink(Model.Id)" data-modal-title="Deactivate Link" data-item-name="Are you sure you want to deactivate '<span>@Html.DisplayFor(model => Model.Name)</span>'?" >Deactivate Link</a>
					</li>

				</ul>

			</div>

		</div>
	}
	<div class="result-detail">
		<div class="result-item-title">
			@if (!Model.IsDeleted)
			{
				<a data-toggle="modal" href="@Url.PageEditLink(Model.Id)">@Model.Name</a>
			}
			else
			{
				<a href="#">@Model.Name</a>
			}
		</div>
		<div class="display-row">
			<div class="display-label">@Html.DisplayNameFor(model => model.CreatedByLoginId):</div>
			<div class="display-field">@Html.DisplayFor(model => model.CreatedByLoginId)</div>
		</div>
		<div class="display-row">
			<div class="display-label">@Html.DisplayNameFor(model => model.BusinessUnitCodes):</div>
			<div class="display-field">@Html.DisplayFor(model => model.BusinessUnitCodes)</div>
		</div>
		<div class="display-row">
			<div class="display-label">@Html.DisplayNameFor(model => model.Status):</div>
			<div class="display-field">@Html.DisplayFor(model => model.Status)</div>
		</div>
		<div class="display-row">
			<div class="display-label">@Html.DisplayNameFor(model => model.UpdatedByLoginId):</div>
			<div class="display-field">@Html.DisplayFor(model => model.UpdatedByLoginId)</div>
		</div>
		<div class="display-row">
			<div class="display-label">@Html.DisplayNameFor(model => model.ChangeDate):</div>
			<div class="display-field">@Html.DisplayFor(model => model.ChangeDate)</div>
		</div>
		<div class="display-row">
			<div class="display-label">@Html.DisplayNameFor(model => model.Description):</div>
			<div class="display-field">@Html.DisplayFor(model => model.Description)</div>
		</div>
		
		<div class="display-row">
			<div class="display-label">@Html.DisplayNameFor(model => model.Label):</div>
			<div class="display-field">@Html.DisplayFor(model => model.Label)</div>
		</div>

		<div class="display-row">
			<div class="display-label">@Html.DisplayNameFor(model => model.RootUrl):
		</div>
			<div class="display-field">
				<a href="@Html.DisplayFor(model => model.RootUrl)" target="_blank">@Html.DisplayFor(model => model.RootUrl) </a>
			</div>
			
		</div>

	</div>
</div>
