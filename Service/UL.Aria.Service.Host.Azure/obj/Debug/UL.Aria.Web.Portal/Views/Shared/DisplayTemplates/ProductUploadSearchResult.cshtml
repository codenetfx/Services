@using UL.Enterprise.Foundation
@using UL.Aria.Web.Common.Mvc
@model UL.Aria.Web.Common.Models.Product.ProductUploadSearchResult
@{
    var productUploadDetails = Url.PageProductUploadStatus(Model.ProductUpload.Id);
}

<div class="search-result product-result clearfix">
	
	<div class="result-actions">
		<input type="checkbox" class="pull-right" style="margin: 2px 0 0 10px;" />
		<div class="dropdown pull-right">
			<a title="Open Menu" class="dropdown-toggle caret" data-toggle="dropdown" href="#"><i></i></a>
			<ul class="dropdown-menu" role="menu">
				<li>
				    <a href="@productUploadDetails">View Details</a>
				</li>
			</ul>
		</div>
	</div>
	<div class="result-detail">
		<div class="result-item-header">
		</div>
		<div class="result-item-title">
			<a href="@productUploadDetails">@Html.DisplayFor(model => model.Name)</a>
		</div>
		<div class="display-label">@Html.DisplayNameFor(model => model.ProductUpload.Status)</div>
		<div class="display-field">@Model.ProductUpload.Status.SpaceIt()</div>

        <div class="display-label">@Html.DisplayNameFor(model => model.ChangeDate)</div>
	    <div class="display-field">@Html.DisplayFor(model => model.ChangeDate)</div>
	</div>
</div>
